{% extends "layout.twig" %}

{% block content %}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">{{ repository }}</h1>

        <form action="{{ url('repository_createDump', {'repositorySlug': repository}) }}" method="post">
            <button value="create">Create Dump</button>
        </form>
        <h2 class="sub-header">Repository Stats</h2>
        <div class="row placeholders">
            {{ render(url('repository_stats', {'repositorySlug': repository})) }}
        </div>

        <h2 class="sub-header">Open Pull Requests: {{ record.displayName }}</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Weight</th>
                    <th>Open Since</th>
                    <th>Updated At</th>
                    <th>Mergable</th>
                    <th>CI State</th>
                    <th>Created By</th>
                    <th>Assigned To</th>
                </tr>
                </thead>
                <tbody>
                {% block pulls %}
                    {% for pullRequest in record.pullRequests %}
                        {% set pull = pullRequest.data %}
                        {% set lastStatus = pullRequest.data_statuses_last is defined ? pullRequest.data_statuses_last : {'target_url':''} %}
                        <tr>
                            <td><a href="{{ pull.html_url }}" title="{{ pull.body }}">
                                    {{ pull.number }}</a>
                            </td>
                            <td><a href="{{ pull.html_url }}" title="{{ pull.body }}">
                                    {{ pull.title }}</a>
                            </td>
                            <td>{{ pullRequest.data_stats is defined ? pullRequest.data_stats.sum : 0}}</td>
                            <td>{{ pull.created_at|date("Y-m-d") }}</td>
                            <td>{{ pull.updated_at|date("Y-m-d") }}</td>
                            <td>{{ pull.mergeable ? 'yes' : 'no' }}</td>
                            <td><a href="{{ lastStatus.target_url }}" title="State of integration">
                                    {{ pull.mergeable_state }}</a>
                            </td>
                            <td>{{ pull.user.login }}</td>
                            <td>{{ pull.assignee ? pull.assignee.login : '' }}</td>
                        </tr>
                    {% endfor %}
                {% endblock %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}